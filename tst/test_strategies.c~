#include "stdio.h"
#include "../src/strategies.h"


void test_get_Ctab_neighbours() {
  printf("%s\n", __func__);
  struct move_t move1={.c=1};
  struct move_t move2={.c=2};
  struct move_t move3={.c=5};
  struct move_t move4={.c=0};
  struct graph_t * graph = graph_init(9, SQUARE);
  enum color_t *colors=colors_init(graph,CYCLIQUE,MAX_COLOR);
  struct color_set_t no_color_forbidden;
  for (int i=0;i<MAX_COLOR;i++){
    no_color_forbidden.t[i]='N';
  }
  struct color_set_t forbidden[1]={no_color_forbidden};
  
  enum color_t color_neighbors[MAX_COLOR] = {0};
  spread__colors(graph,move1,0,forbidden,colors);
  spread__colors(graph,move2,0,forbidden,colors);
  spread__colors(graph,move3,0,forbidden,colors);
  print_color(colors,graph->num_vertices);
  //get_tab_neighbors(graph, colors, 5, color_neighbors, 0);
  for (int i = 0; i < MAX_COLOR; i++) {
    printf("%d ",color_neighbors[i]);
  }
  printf("\n");
  
}


int main () {
  test_get_Ctab_neighbours();
  return 0;
}
